{
  "name": "@yourorg/migrate-cli",
  "version": "1.0.0",
  "description": "Database migration management CLI tool for PostgreSQL, MySQL, and SQLite",
  "keywords": [
    "database",
    "migration",
    "cli",
    "postgres",
    "mysql",
    "sqlite",
    "schema",
    "version-control"
  ],
  "license": "MIT",
  "author": "Your Organization",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/migrate-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourorg/migrate-cli/issues"
  },
  "homepage": "https://github.com/yourorg/migrate-cli#readme",
  "main": "dist/cli.js",
  "bin": {
    "migrate": "dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --target=es2022 --outfile=dist/cli.js --external:pg --external:mysql2 --external:better-sqlite3 --external:commander --external:chalk --external:cli-table3 --external:inquirer --external:winston --external:dotenv",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "ci": "npm run lint && npm run type-check && npm run test:coverage",
    "prepublishOnly": "npm run ci && npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "mysql2": "^3.6.5",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
