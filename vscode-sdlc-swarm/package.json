{
  "name": "sdlc-swarm",
  "displayName": "SDLC Swarm (No-Code, Evidence-Gated, Autonomous)",
  "description": "Agentic SDLC assistant for VS Code. Spec-first. Test-first. Evidence-gated. Autonomous by default.",
  "version": "0.1.3",
  "publisher": "sdlc-swarm",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "sdlc",
    "agent",
    "swarm",
    "evidence",
    "planning",
    "architecture",
    "release"
  ],
  "activationEvents": [
    "onCommand:sdlc.initializeWorkspace",
    "onCommand:sdlc.planToPrd",
    "onCommand:sdlc.architectureReview",
    "onCommand:sdlc.releaseReadiness",
    "onCommand:sdlc.showDashboard",
    "onCommand:sdlc.buildFeature",
    "onCommand:sdlc.generateCode",
    "onCommand:sdlc.refactorCode",
    "onCommand:sdlc.buildIntegration",
    "onCommand:sdlc.multiLanguageProject",
    "onCommand:swarm.planNextSprint",
    "onCommand:swarm.architectureReview",
    "onCommand:swarm.releaseReadiness",
    "onCommand:swarm.showDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sdlc.initializeWorkspace",
        "title": "SDLC: Initialize Workspace",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.planToPrd",
        "title": "SDLC: Plan to PRD",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.architectureReview",
        "title": "SDLC: Architecture Review",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.releaseReadiness",
        "title": "SDLC: Release Readiness",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.showDashboard",
        "title": "SDLC: Show Project Dashboard",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.buildFeature",
        "title": "SDLC: Build Feature",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.generateCode",
        "title": "SDLC: Generate Code",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.refactorCode",
        "title": "SDLC: Refactor Code",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.buildIntegration",
        "title": "SDLC: Build Integration",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.multiLanguageProject",
        "title": "SDLC: Multi-Language Project",
        "category": "SDLC Swarm"
      },
      {
        "command": "sdlc.assessProject",
        "title": "SDLC: Assess Existing Project",
        "category": "SDLC Swarm (Brownfield)"
      },
      {
        "command": "sdlc.technicalDebtAudit",
        "title": "SDLC: Technical Debt Audit",
        "category": "SDLC Swarm (Brownfield)"
      },
      {
        "command": "sdlc.incrementalImprovement",
        "title": "SDLC: Incremental Improvement",
        "category": "SDLC Swarm (Brownfield)"
      },
      {
        "command": "sdlc.legacyModernization",
        "title": "SDLC: Legacy Modernization",
        "category": "SDLC Swarm (Brownfield)"
      },
      {
        "command": "swarm.planNextSprint",
        "title": "Swarm: Plan Next Sprint",
        "category": "SDLC Swarm"
      },
      {
        "command": "swarm.architectureReview",
        "title": "Swarm: Architecture Review",
        "category": "SDLC Swarm"
      },
      {
        "command": "swarm.releaseReadiness",
        "title": "Swarm: Release Readiness",
        "category": "SDLC Swarm"
      },
      {
        "command": "swarm.showDashboard",
        "title": "Swarm: Show Swarm Dashboard",
        "category": "SDLC Swarm"
      }
    ],
    "chatParticipants": [
      {
        "id": "sdlc.planToPRD",
        "name": "PlanToPRD",
        "description": "Generate PRD from vision with full risk assessment and stakeholder sign-off",
        "isSticky": true
      },
      {
        "id": "sdlc.codeChange",
        "name": "CodeChange",
        "description": "Plan and validate code changes with testing and rollback strategy",
        "isSticky": false
      },
      {
        "id": "sdlc.infraDeploy",
        "name": "InfraDeploy",
        "description": "Infrastructure deployment planning with monitoring and rollback runbook",
        "isSticky": false
      },
      {
        "id": "sdlc.securityReview",
        "name": "SecurityReview",
        "description": "Security-focused review (authN/authZ/PII/compliance/tenancy)",
        "isSticky": false
      },
      {
        "id": "sdlc.dashboard",
        "name": "Dashboard",
        "description": "Show project status, metrics, and evidence ledger",
        "isSticky": false
      },
      {
        "id": "sdlc.buildFeature",
        "name": "BuildFeature",
        "description": "End-to-end feature implementation with tests",
        "isSticky": true
      },
      {
        "id": "sdlc.generateCode",
        "name": "GenerateCode",
        "description": "Generate production-ready code from specs",
        "isSticky": false
      },
      {
        "id": "sdlc.refactorCode",
        "name": "RefactorCode",
        "description": "Refactor existing code with safety checks",
        "isSticky": false
      },
      {
        "id": "sdlc.buildIntegration",
        "name": "BuildIntegration",
        "description": "Build API integrations and service connections",
        "isSticky": false
      },
      {
        "id": "sdlc.multiLanguage",
        "name": "MultiLanguage",
        "description": "Orchestrate multi-language projects (TS+Rust+etc)",
        "isSticky": false
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6",
    "@vscode/vsce": "^2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sdlc-swarm"
  },
  "license": "MIT"
}
